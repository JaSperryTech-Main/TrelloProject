{
  "name": "trellodocker",
  "version": "1.0.0",
  "private": "true",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "scripts": {
    "dev": "concurrently \"pnpm run server\" \"pnpm run client\"",
    "dev:docker": "docker compose down && docker compose up --build",
    "server": "cd backend && pnpm dev",
    "client": "cd frontend && pnpm dev"
  }
}
